<%- include ("./templates/_header") %>
<div class="container">
  <h1>Are you sure you want to delete this post?</h1>
  <div class="row">
    <div class="col-md-5 offset-md-3">
      <div class="card">
        <div class="card-body">
          <form action="/delete/<%= post._id %> " method="POST">
            <div class="form-group">
              <input type="text" class="form-control" name="title" value="<%= post.title %> ">
            </div>
            <div class="form-group">
              <input type="text" name="author" class="form-control" value="<%= post.author %> ">
            </div>
            <div class="form-group">
              <textarea class="form-control" name="post_data" cols="100" rows="10"
                placeholder="Add a Description"><%= post.post_data %> </textarea>
            </div>
            <button type="submit" class="btn btn-primary">Delete</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
<%- include ("./templates/_footer") %>